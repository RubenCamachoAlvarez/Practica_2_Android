<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Desgloce de subsidio"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Subsidio por número de hijos"
            />

        <EditText
            android:id="@+id/campoSubsidioNumeroHijos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Subsidio por número de hijos en edad escolar"
            />

        <EditText
            android:id="@+id/campoSubdidioHijosEdadEscolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Subsidio por número estado civil"
            />

        <EditText
            android:id="@+id/campoSubsidioEstadoCivil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Subsidio total"
            />

        <EditText
            android:id="@+id/campoTotalSubsidio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/botonRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Volver"
            android:textSize="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>